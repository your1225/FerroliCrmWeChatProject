.login_cap {
  font-size: 38rpx;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #cccccc;
}

.login_item .login_item_title {
  margin-top: 10rpx;
  padding-left: 5px;
  color: #999999;
}

.login_item .login_item_content_wrap .login_item_content {
  margin: 20rpx 30rpx;
  height: 80rpx;
}

.login_tips {
  border-top: 1rpx solid #cccccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50rpx;
  display: flex;
  color: #ff0000;
}